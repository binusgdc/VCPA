{
	"compilerOptions": {
		"lib": [ "es2022" ],
		"target": "es2022",
		"module": "es2022",
		"moduleResolution": "node",
		"esModuleInterop": true,

		"strict": true,
		"forceConsistentCasingInFileNames": true,

		"outDir": "build/",
		"sourceMap": true,

		"skipLibCheck": true
	},

	"include": [
		"src/**/*.ts"
	]
}
