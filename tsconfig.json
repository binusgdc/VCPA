{
	"compilerOptions": {
		"lib": [ "es2021" ],
		"target": "es2021",
		"module": "commonjs",
		"esModuleInterop": true,

		"strict": false, // TODO: get everything clean with strict mode someday
		"forceConsistentCasingInFileNames": true,

		"outDir": "build/",

		"skipLibCheck": true
	},

	"include": [
		"src/*.ts",
		"src/commands/*.ts",
		"src/types/*.ts"
	]
}
