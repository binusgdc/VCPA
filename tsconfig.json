{
	"compilerOptions": {
		"lib": [ "es2021" ],
		"target": "es2021",
		"module": "commonjs",
		"esModuleInterop": true,

		"strict": true,
		"forceConsistentCasingInFileNames": true,

		"outDir": "build/",

		"skipLibCheck": true
	},

	"include": [
		"src/**/*.ts"
	],

	"exclude": [
		"src/test/**/*.ts"
	]
}
